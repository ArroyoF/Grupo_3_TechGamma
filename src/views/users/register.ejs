<!DOCTYPE html>
<html>
    <%- include('../partials/head.ejs') %>
    <body>
        <%- include('../partials/header.ejs') %>
        
        
        <div class="titulo-ingreso-datos">
            <h2 > Registra tus datos:</h2>
        </div>

        <ul class="errores"></ul>

        <form class="ingreso-datos" action="/user/register" enctype="multipart/form-data" method="POST">
            
            <div><input type="text" id="nombre" name="nombre" placeholder="Nombre" value="<%= locals.old && locals.old.nombre %>"></div> 
                <% if (locals.errors && errors.nombre) { %>
                    <p><%=errors.nombre.msg%></p>
                <% } %> 
            <div><input type="text" id="apellido" name="apellido" placeholder="Apellido" value="<%= locals.old && locals.old.apellido %>"></div> 
                <% if (locals.errors && errors.apellido) { %>
                    <p><%=errors.apellido.msg%></p>
                <% } %> 
            <div><input type="text" id="categoria" name="categoria" placeholder="Admin/User" value="<%= locals.old && locals.old.categoria %>"></div> 
                <% if (locals.errors && errors.categoria) { %>
                    <p><%=errors.categoria.msg%></p>
                <% } %> 
            <div><input type="email" id="email" name="email" placeholder="Correo" value="<%= locals.old && locals.old.email %>"></div> 
                <% if (locals.errors && errors.email) { %>
                    <p><%=errors.email.msg%></p>
                <% } %> 
            <div><input type="password" id="password" name="password" placeholder="ContraseÃ±a"></div> 
                <% if (locals.errors && errors.password) { %>
                    <p><%=errors.password.msg%></p>
                <% } %> 
            <div><input type="file" id="imagen" name="imagen" placeholder="Imagen"></div>
            <% if (locals.old && !old.file) { %>
                <p>Debe subir un archivo</p>
            <% } %> 
            <div class="botones">
                <div><input class="boton_enviar" type="submit" value="Enviar"></div>
                <div><input class="boton_reset" type="reset" value="Borrar"></div>
            </div>
        
        </form>



        <br>
        <br>
        <br>
        
        </main>

        <%- include('../partials/footer.ejs') %>
        <script src="/js/userAddValidator.js"></script>
        
    </body>
</html>